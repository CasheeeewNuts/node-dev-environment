{
  "scripts": {
    "compile": "tsc",
    "type-check": "tsc --noEmit",
    "lint": "eslint --fix && prettier --write '**/*.{ts,js}'",
    "lint-staged": "lint-staged",
    "prepare": "husky install",
    "test": "vitest",
    "coverage": "vitest --coverage"
  },
  "lint-staged": {
    "*.{js, ts}": [
      "pnpm run lint"
    ]
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "c8": "^7.11.3",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4",
    "vitest": "^0.16.0"
  }
}
